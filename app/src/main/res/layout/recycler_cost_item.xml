<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/costs_recycler_inner_width"
        android:layout_height="@dimen/costs_recycler_inner_height"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/innerCostItemLabelTextView"
            style="@style/CostsRecyclerInnerCostTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/costs_recycler_inner_vertical_margin"
            app:layout_constraintBottom_toTopOf="@id/innerCostItemValueTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Item #1" />

        <TextView
            android:id="@+id/innerCostItemValueTextView"
            style="@style/CostsRecyclerInnerCostValuTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/costs_recycler_inner_vertical_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/innerCostItemLabelTextView"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Item #1" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>